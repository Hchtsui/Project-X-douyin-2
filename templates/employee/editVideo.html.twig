{# templates/employee/editvideo.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto mt-10">
        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <h1 class="text-2xl font-bold mb-6">Edit Video</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div class="form-group">
                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-xs italic'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description, null, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.description, {'attr': {'class': 'text-red-500 text-xs italic'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.url, null, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.url, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.url, {'attr': {'class': 'text-red-500 text-xs italic'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.tag, null, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.tag, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.tag, {'attr': {'class': 'text-red-500 text-xs italic'}}) }}
            </div>

            {# Add other form fields as needed, each with its own form-group #}

            <div class="form-group">
                {{ form_rest(form) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
