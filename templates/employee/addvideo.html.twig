{# templates/employee/addvideo.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Add Video{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto p-6 bg-white shadow-md rounded-md">
        <h1 class="text-2xl font-bold mb-6">Add a new Video</h1>
        {% if app.user %}
            <a href="{{ path('category_page', {'id': categoryId}) }}" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded mb-4 inline-block">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        {% endif %}
        {{ form_start(form) }}
        <div class="space-y-4">
            {{ form_row(form.name, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
            {{ form_row(form.description, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
            {{ form_row(form.url, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
            {{ form_row(form.tag, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
            {{ form_row(form.categories, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
        </div>
        <button type="submit" class="mt-4 w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">
            <i class="fas fa-save"></i> Save
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
