{% extends 'base.html.twig' %}

{% block title %}Orders List{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-8 text-center">Video List</h1>
        <div class="flex flex-wrap -mx-4">
            {% for order in orders %}
                <div class="w-full md:w-1/3 px-4 mb-8">
                    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                        <div class="p-6">
                            <h5 class="text-2xl font-semibold mb-4">Video #{{ order.id }}</h5>
                            <p class="text-gray-600 mb-2"><span class="font-bold">Name:</span> {{ order.name }}</p>
                            <p class="text-gray-600 mb-2"><span class="font-bold">Description:</span> {{ order.description }}</p>
                            <div class="relative pb-9/16 h-0 mb-4">
                                <video class="absolute top-0 left-0 w-full h-full" controls>
                                    <source src="{{ order.url }}" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            </div>
                            <p class="text-gray-600 mb-4"><span class="font-bold">Tag:</span> {{ order.tag }}</p>
                            <!-- Delete button -->
                            {# <a href="{{ path('delete_product', {'id': order.id}) }}" class="btn btn-danger">Delete</a> #}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <style>
        .pb-9\/16 {
            padding-bottom: 56.25%; /* 16:9 aspect ratio */
        }
    </style>
{% endblock %}
