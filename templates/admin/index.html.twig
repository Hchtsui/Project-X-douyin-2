{# templates/admin/users/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-2xl font-bold mb-4">User Management</h1>
        <a href="{{ path('admin_user_add') }}" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded mb-4 inline-block">
            <i class="fas fa-plus"></i> Add User
        </a>
        <table class="min-w-full bg-white">
            <thead>
            <tr>
                <th class="py-2 px-4 border-b border-gray-200">ID</th>
                <th class="py-2 px-4 border-b border-gray-200">Email</th>
                <th class="py-2 px-4 border-b border-gray-200">Roles</th>
                <th class="py-2 px-4 border-b border-gray-200">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td class="py-2 px-4 border-b border-gray-200">{{ user.id }}</td>
                    <td class="py-2 px-4 border-b border-gray-200">{{ user.email }}</td>
                    <td class="py-2 px-4 border-b border-gray-200">{{ user.roles|join(', ') }}</td>
                    <td class="py-2 px-4 border-b border-gray-200">
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-1 px-2 rounded">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-2 rounded" onclick="return confirm('Are you sure you want to delete this user?');">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
