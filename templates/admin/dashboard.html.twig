{# templates/admin/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div class="container mx-auto mt-8 p-6 bg-gray-100 rounded-lg shadow-lg">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-800">Admin Dashboard</h1>
            <a href="{{ path('home_page') }}" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg inline-flex items-center">
                <i class="fas fa-home mr-2"></i> Back to Home
            </a>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <a href="{{ path('admin_users') }}" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-6 px-6 rounded-lg shadow-lg text-center flex flex-col items-center">
                <i class="fas fa-users fa-3x mb-4"></i>
                <span class="text-xl">Manage Users</span>
            </a>
            <a href="{{ path('admin_videos') }}" class="bg-green-500 hover:bg-green-600 text-white font-bold py-6 px-6 rounded-lg shadow-lg text-center flex flex-col items-center">
                <i class="fas fa-video fa-3x mb-4"></i>
                <span class="text-xl">Manage Videos</span>
            </a>
            <a href="{{ path('admin_categories') }}" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-6 px-6 rounded-lg shadow-lg text-center flex flex-col items-center">
                <i class="fas fa-tags fa-3x mb-4"></i>
                <span class="text-xl">Manage Categories</span>
            </a>
        </div>
    </div>
{% endblock %}
