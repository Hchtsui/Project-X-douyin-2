{# templates/admin/videos/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Manage Videos{% endblock %}

{% block body %}
    <div class="container mx-auto mt-8 p-6 bg-gray-100 rounded-lg shadow-lg">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-800">Manage Videos</h1>
            <div class="flex space-x-4">
                <a href="{{ path('admin_dashboard') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-lg inline-flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i> Back to Admin Panel
                </a>
                <a href="{{ path('admin_video_add') }}" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg inline-flex items-center">
                    <i class="fas fa-plus mr-2"></i> Add Video
                </a>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-lg">
                <thead>
                <tr class="bg-gray-200 text-gray-700">
                    <th class="py-3 px-6 font-semibold text-left border-b border-gray-300">ID</th>
                    <th class="py-3 px-6 font-semibold text-left border-b border-gray-300">Name</th>
                    <th class="py-3 px-6 font-semibold text-left border-b border-gray-300">Description</th>
                    <th class="py-3 px-6 font-semibold text-left border-b border-gray-300">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for video in videos %}
                    <tr class="hover:bg-gray-100">
                        <td class="py-4 px-6 border-b border-gray-200">{{ video.id }}</td>
                        <td class="py-4 px-6 border-b border-gray-200">{{ video.name }}</td>
                        <td class="py-4 px-6 border-b border-gray-200">{{ video.description }}</td>
                        <td class="py-4 px-6 border-b border-gray-200">
                            <div class="flex space-x-2">
                                <a href="{{ path('admin_video_edit', {'id': video.id}) }}" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded-lg inline-flex items-center">
                                    <i class="fas fa-edit mr-2"></i> Edit
                                </a>
                                <a href="{{ path('admin_video_delete', {'id': video.id}) }}" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg inline-flex items-center" onclick="return confirm('Are you sure you want to delete this video?');">
                                    <i class="fas fa-trash mr-2"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
