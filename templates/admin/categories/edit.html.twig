{# templates/admin/categories/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto p-6 bg-white shadow-md rounded-md">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold">Edit Category</h1>
            <a href="{{ path('admin_dashboard') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">
                <i class="fas fa-arrow-left"></i> Back to Admin Panel
            </a>
        </div>
        {{ form_start(form) }}
        <div class="space-y-4">
            {{ form_row(form.name, {'attr': {'class': 'w-full px-3 py-2 border rounded-md'}}) }}
        </div>
        <button type="submit" class="mt-4 w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">
            <i class="fas fa-save"></i> Save
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
